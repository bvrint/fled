rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isTeacher() {
      return isSignedIn() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher';
    }
    
    function isParent() {
      return isSignedIn() && request.auth.token.email != null;
    }
    
    function isParentOfStudent(studentId) {
      return isParent() && 
             exists(/databases/$(database)/documents/students/$(studentId)) &&
             get(/databases/$(database)/documents/students/$(studentId)).data.parentEmail == request.auth.token.email;
    }

    // Users: anyone authenticated can read/create their user doc
    // Parents can also read teacher documents to get teacher names
    match /users/{userId} {
      allow read: if (isSignedIn() && request.auth.uid == userId) ||
                     (isParent() && resource.data.role == 'teacher');  // Parents can read teacher info
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn() && request.auth.uid == userId;
    }

    // Sections owned by teacher (store ownerUid on section doc)
    // Parents can read sections where their children are enrolled
    match /sections/{sectionId} {
      allow read: if (isTeacher() && resource.data.ownerUid == request.auth.uid) ||
                     isParent();  // Parents can read section info
      allow create: if isTeacher() && request.resource.data.ownerUid == request.auth.uid;
      allow update, delete: if isTeacher() && resource.data.ownerUid == request.auth.uid;
    }

    // Students under a section (store sectionId and ownerUid on student docs)
    // UPDATED: Allow parents to read students linked to them
    match /students/{studentId} {
      allow read: if (isTeacher() && resource.data.ownerUid == request.auth.uid) ||
                     isParent();  // Parents can read student data (filtering done in app)
      allow create: if isTeacher() && request.resource.data.ownerUid == request.auth.uid;
      allow update, delete: if isTeacher() && resource.data.ownerUid == request.auth.uid;
    }

    // Parents created by the teacher as contacts (store ownerUid or ownerUids array)
    // UPDATED: Allow parents to read their own parent document by email
    // UPDATED: Allow parents to update only lastLoginAt when they sign in
    // UPDATED: Support both single ownerUid and ownerUids array for multi-teacher scenarios
    match /parents/{parentId} {
      // Teachers can read any parent doc, parents can read their own
      allow read: if isTeacher() || 
                     (isParent() && resource.data.email == request.auth.token.email);
      
      // Teachers can create parent docs (ownerUids will be set via arrayUnion in the create)
      allow create: if isTeacher();
      
      // Teachers can update their own parents, parents can update limited fields
      allow update: if isTeacher() ||
                       (isParent() && resource.data.email == request.auth.token.email &&
                        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['lastLoginAt', 'name', 'fcmTokens']));
      
      // Teachers can delete their own parents
      allow delete: if isTeacher() && 
                       (resource.data.ownerUid == request.auth.uid ||
                        (resource.data.keys().hasAny(['ownerUids']) &&
                         resource.data.ownerUids.hasAny([request.auth.uid])));
    }

    // Attendance (store sectionId, studentId, ownerUid)
    // UPDATED: Allow parents to read attendance
    match /attendance/{attId} {
      allow read: if (isTeacher() && resource.data.ownerUid == request.auth.uid) ||
                     isParent();  // Parents can read attendance
      allow create: if isTeacher() && request.resource.data.ownerUid == request.auth.uid;
      allow update, delete: if isTeacher() && resource.data.ownerUid == request.auth.uid;
    }

    // Attendance Sessions (store sectionId, ownerUid, date, status)
    // UPDATED: Allow parents to read attendance sessions
    match /attendanceSessions/{sessionId} {
      allow read: if (isTeacher() && resource.data.ownerUid == request.auth.uid) ||
                     isParent();  // Parents can read attendance sessions
      allow create: if isTeacher() && request.resource.data.ownerUid == request.auth.uid;
      allow update, delete: if isTeacher() && resource.data.ownerUid == request.auth.uid;
    }

    // Tasks (store ownerUid)
    // UPDATED: Allow parents to read tasks
    match /tasks/{taskId} {
      allow read: if (isTeacher() && resource.data.ownerUid == request.auth.uid) ||
                     isParent();  // Parents can read tasks
      allow create: if isTeacher() && request.resource.data.ownerUid == request.auth.uid;
      allow update, delete: if isTeacher() && resource.data.ownerUid == request.auth.uid;
    }

    // Task Scores (store taskId, sectionId, updatedBy)
    // UPDATED: Allow parents to read task scores
    match /taskScores/{taskId} {
      allow read: if (isTeacher() && resource.data.updatedBy == request.auth.uid) ||
                     isParent();  // Parents can read task scores
      allow create: if isTeacher() && request.resource.data.updatedBy == request.auth.uid;
      allow update: if isTeacher() && resource.data.updatedBy == request.auth.uid;
      allow delete: if isTeacher() && resource.data.updatedBy == request.auth.uid;
    }

    // Messages/Announcements (store ownerUid)
    // UPDATED: Allow parents to read messages and update readBy field
    match /messages/{msgId} {
      allow read: if (isTeacher() && resource.data.ownerUid == request.auth.uid) ||
                     isParent();  // Parents can read messages
      allow create: if isTeacher() && request.resource.data.ownerUid == request.auth.uid;
      allow update: if (isTeacher() && resource.data.ownerUid == request.auth.uid) ||
                       (isParent() && 
                        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['readBy', 'replies']));
                       // Parents can update only readBy array (mark as read) and replies array (add replies)
      allow delete: if isTeacher() && resource.data.ownerUid == request.auth.uid;
    }
  }
}
